//A Java example of variables
public class Variables {

	public static void main(String[] args) {
		int x = 112;
		System.out.println(x);
		//prints 112
		int age = 12;
		age =  age + 1;
		System.out.println(age);
		//prints 13
		
		String name = "Steve";
		System.out.println(name);
		System.out.println(name + " is 13 years old.");
		name = "Bob";
		System.out.println(name + " is 13 years old.");

		char firstInitial = 'S';
		System.out.println(firstInitial);

		num = 10;
		num1 = num/2;
		
			
	}

}
